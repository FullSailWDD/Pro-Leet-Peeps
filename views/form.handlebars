<div id="page-wrapper" ng-controller="AccordionDemoCtrl">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add Course</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

    <div class="row">
        <div class="col-lg-6">
            <uib-accordion close-others="oneAtATime">
                <uib-accordion-group heading="{[{group.title}]}" ng-repeat="group in groups" is-open="status.isFirstOpen" is-disabled="status.isFirstDisabled">

                  <form name="userForm" class="panel-open" ng-submit="submitForm() && Post()" novalidate>                        
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-6">

                                             <div class="form-group">
                                                   
                                                <div ng-repeat="item in group.users">
                                                    <label>{[{ item.label }]}</label>

                                        <!--  TEXT -->
                                                    <div class="form-group" ng-class="{ 'has-error' : groupList.{[{ item.name }]}.$invalid && !groupList.{[{ item.name }]}.$pristine }">
                                                        <input ng-model="groups[item.name]" type="{[{item.type}]}" class="form-control" name="{[{ item.name }]}"  placeholder="{[{item.placeholder}]}" />
                                                        <p ng-show="groupList.{[{ item.name }]}.$invalid && !groupList.{[{ item.name }]}.$pristine" class="help-block">
                                                        </p>
                                                    </div>
                                                </div>
                                              
                                            </div>
                                            <button type="submit" ng-click="showme=true" class="btn btn-default" ng-disabled="userForm.$invalid">Submit</button>     
                                    </div>
                                </div>
                            </div>    
                    </form>


                </uib-accordion-group>
            </uib-accordion>
        
    </div>
</div>