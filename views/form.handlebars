<div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add Course</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <button ng-click="validateClick(premier, $index)" 
                ng-class="{premier: premier.isPremier,
                          green: premier.isGreen,
                          random: premier.isRandom}" 
                ng-repeat="premier in premiers" 
                class="btn btn-default btn-game" 
                data-correct="{[{premier.correct}]}" 
                href="#" role="button">
                {[{premier.name}]}
        </button>


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

            <div ng-controller="AccordionDemoCtrl">
              
              <uib-accordion close-others="oneAtATime">

                <uib-accordion-group heading="{[{group.title}]}" ng-repeat="group in groups">
                        
                <form name="userForm" ng-submit="submitForm(userForm.$valid)" novalidate>

                <div class="panel-body" >
                    <div class="row">
                        <div class="col-lg-6">

                        <form name="userForm" ng-submit="Post()" novalidate>
                        
                            <div class="form-group">
                               
                            <div ng-repeat="item in group.users">

                                <label>{[{ item.label }]}</label>

                    <!--  TEXT -->
                                <div class="form-group" ng-class="{ 'has-error' : userForm.{[{ item.name }]}.$invalid && !userForm.{[{ item.name }]}.$pristine }">
                                    <input type="text" class="form-control" name="{[{ item.name }]}" ng-model="status" placeholder="{[{item.placeholder}]}" required>
                                    <p ng-show="userForm.{[{ item.name }]}.$invalid && !userForm.{[{ item.name }]}.$pristine" class="help-block">
                                    </p>
                                </div>


                            </div>
                              
                            </div>


                           <button type="submit" class="btn btn-default">Submit</button> 
                        </form>
                </uib-accordion-group>

              </uib-accordion>
            </div>

        </div>
    </div>
        
    </div>
</div>