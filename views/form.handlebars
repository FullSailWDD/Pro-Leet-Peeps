<div id="page-wrapper" ng-controller="AccordionDemoCtrl">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add Course</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
   
    



    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

            <div>
              
              <uib-accordion close-others="oneAtATime">

                <uib-accordion-group heading="{[{group.title}]}" ng-repeat="group in groups">
                   <div ng-class="{addingDegreeCourse: group.isaddingDegreeCourse, addingRubric: group.isaddingRubric}" 
                             class="btn btn-default btn-game" data-correct="{{group.correct}}">
                                                MOVING{[{group.title}]}     
                    <form name="userForm" ng-submit="submitForm() && Post()" novalidate>
                         

                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-6">

                                        

                                            <div class="form-group">
                                                   
                                                <div ng-repeat="item in group.users">

                                                    <label>{[{ item.label }]}</label>

                                        <!--  TEXT -->
                                                    <div class="form-group" ng-class="{ 'has-error' : groupList.{[{ item.name }]}.$invalid && !groupList.{[{ item.name }]}.$pristine }">
                                                        <input   type="text" class="form-control" name="{[{ item.name }]}"  placeholder="{[{item.placeholder}]}" />
                                                        <p ng-show="groupList.{[{ item.name }]}.$invalid && !groupList.{[{ item.name }]}.$pristine" class="help-block">
                                                        </p>
                                                    </div>
                                                </div>
                                              
                                            </div>

                                            <button ng-click="validateClick(group, $index)" 
                                                    class="btn btn-default btn-game" data-correct="{{group.correct}}" 
                                                    href="#" role="button">
                                                    {[{group.title}]}
                                            </button>
                                    
                                    </div>
                                </div>
                            </div>
                        
                                
                    </form>
</div> <!-- End of moving div -->
                </uib-accordion-group>

              </uib-accordion>
              
            </div>

        </div>
    </div>
        
    </div>
</div>