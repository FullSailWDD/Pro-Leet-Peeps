
  <div class="container" ng-controller="dashController">
    <h1>Course Dashboard</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Major</th>         
          <th>Course</th>
          <th>Description</th>
          <th>Action</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="data in groups">
          <td>{[{data.title}]}</td>
          <td>{[{data.className}]}</td>
          <td>{[{data.className}]}</td>
          <td><button class="btn btn-danger" ng-click="remove(courses._id)">Remove</button></td>
          <td><button class="btn btn-warning" ng-click="edit(courses._id)">Edit</button></td>
        </tr>
      </tbody>
    </table>

  </div>
