<div id="page-wrapper" ng-controller="formsController">
    <div>
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add Course</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default" >
<button type="submit" ng-click='tog=2'>submiiiiitt</button>

            <div ng-controller="AccordionDemoCtrl">
              
              <uib-accordion close-others="oneAtATime">

                <uib-accordion-group heading="{[{group.title}]}" ng-repeat="group in groups" ng-class='{"addingDegreeCourse":tog==2}'>
                        
                        <form name="userForm" ng-submit="submitForm(userForm.$valid)" novalidate>
<!--                 <a ng-click="Post()">Fire</a>
 -->
                <div class="panel-heading" ng-hide="showme">
                    Select Degree Program and Course
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">

                        <form name="userForm" ng-submit="Post()" novalidate>
                        
                            <div class="form-group">
                               
                            <div ng-repeat="item in group.users">

                                <label>{[{ item.label }]}</label>

                    <!--  TEXT -->
                                <div class="form-group" ng-class="{ 'has-error' : userForm.{[{ item.name }]}.$invalid && !userForm.{[{ item.name }]}.$pristine }">
                                    <input type="text" class="form-control" name="{[{ item.name }]}" ng-model="status" placeholder="{[{item.placeholder}]}" required>
                                    <p ng-show="userForm.{[{ item.name }]}.$invalid && !userForm.{[{ item.name }]}.$pristine" class="help-block">
                                    </p>
                                </div>


                            </div>
                              
                            </div>
                           <button type="submit" class="btn btn-default" ng-disabled="userForm.$invalid">Submit</button>   
                           <button ng-click="showme=true" type="submit" class="btn btn-default">Submit</button>   
                        </form>
                </uib-accordion-group>

              </uib-accordion>
            </div>

        </div>
    </div>
        
    </div>
</div>